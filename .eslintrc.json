{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module", // Allows use of "import"
    "ecmaFeatures": {
      "jsx": true // Allow parsing of jsx
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended", // uses the recommended rules from the @typescript-eslint/eslint-plugin
    "plugin:react/recommended", // uses the recommended rules from @eslint-plugin-react
    "plugin:react-hooks/recommended",
    "plugin:react/jsx-runtime", // disable requiring "import React" since we are running React >= v17
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier" // enables eslint-config-prettier to skip all formatting eslint rules
  ],
  "rules": {
    "react/display-name": "warn",
    "react/function-component-definition": ["error", {"namedComponents": "arrow-function"}],
    "import/prefer-default-export": "error"
  },
  "ignorePatterns": [
    ".eslintrc.js",
    ".prettierrc.js"
  ]
}
